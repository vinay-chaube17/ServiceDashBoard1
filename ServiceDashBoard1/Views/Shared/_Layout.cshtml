<body>
    <div>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-5 ">
                <div class="container-fluid" style="background-color: #2C3E50; padding: 10px; ">
                    <h1 style="color: #F39C12; font-weight: bold; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);"> <i class="bi bi-lightning-charge-fill"> </i> DashBoard</h1>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                            aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav ms-auto d-flex">
                                <!-- Right align navbar items -->
                                @if (Context.Session.GetString("Username") != null)
                                {
                                    <li class="nav-item d-flex" >
                                        <a class="nav-link btn text-white" style="background-color: red; border-color: red;" asp-area="" asp-controller="Users" asp-action="Logout">  <i class="bi bi-door-open"></i> Logout</a>
                                    </li>
                                }

                                else
                                {
                                    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
                                  (ViewContext.RouteData.Values["action"]?.ToString() == "Index" ||
                                  ViewContext.RouteData.Values["action"]?.ToString() == "Privacy"))
                                    {
                                        <a class="nav-link text-white" style="background-color: blue; border: none; position: absolute; right: 10px;"
                                        asp-controller="Users" asp-action="Login">Login</a>
                                    }

                                }
                            </ul>

                    </div>
                </div>
            </nav>
        </header>
        <div class="container">


            <main role="main" class="pb-3" >

                @RenderBody()
            </main>

        </div>
        @if (!IsSectionDefined("NoFooter"))
        {
            <footer class="border-top bg-light text-center" style="bottom: 0; width: 100%; padding: 15px; background: radial-gradient(circle at 50% 50%, rgba(255, 221, 85, 0.85), rgba(255, 170, 51, 0.85), rgba(255, 119, 68, 0.85), rgba(221, 85, 51, 0.85), rgba(153, 34, 34, 0.85)); color: white; box-shadow: 0 0 15px rgba(255, 170, 51, 0.4), 0 0 25px rgba(255, 119, 68, 0.3), 0 0 35px rgba(221, 85, 51, 0.2);">
                <div class="container">
                &copy; 2025 - ServiceDashBoard1
