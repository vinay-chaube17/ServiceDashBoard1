<script>
         document.addEventListener("DOMContentLoaded", function () {
        const navbar = document.getElementById('mainNavbar');

        // Manually initialize collapse on navbar
        let bsCollapse = bootstrap.Collapse.getInstance(navbar);
        if (!bsCollapse) {
            bsCollapse = new bootstrap.Collapse(navbar, { toggle: false });
        }

        console.log("Collapse instance:", bsCollapse);  // should log the instance now, NOT null

        // Add click listeners to nav-links inside the collapsed navbar
        document.querySelectorAll('.navbar-collapse .nav-link').forEach(function (el) {
            el.addEventListener('click', function () {
                bsCollapse.hide();
            });
        });
    });


</script>

