
@{
    ViewData["Title"] = "Send OTP";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-12">
            <div class="card border-warning shadow" style="font-weight: bold;">
                <div class="card-header text-white text-center" style="background-color: gray;">
                    <h4>Send OTP</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SendOtp" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email ID</label>
                            <input type="email" name="email" placeholder="Please mention user email ID" class="form-control" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn text-white" style="font-weight: bold; background-color: gray;">
                                Send OTP
                            </button>
                        </div>

                        <div class="mt-3 text-center text-danger">
                            @if (TempData["Message"] != null)
                            {
                                <span>@TempData["Message"]</span>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section NoFooter {
}